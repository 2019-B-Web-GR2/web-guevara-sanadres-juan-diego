<%- include('../compartido/cabecera')%>
<div class="container">
    <h1>Login Usuario</h1>
    <form action="http://localhost:4000/usuario/login"
          method="post">
        <div class="form-group">
            <label for="usernameID">Username</label>
            <input id="usernameID"
                   type="text"
                   name="username"
                   placeholder="Ej: Juan D Guevara"
                   title="Ingresar nombre de usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa tu nombre de usuario v√°lido
            </small>
        </div>
        <div class="form-group">
            <label for="passwordID">Password</label>
            <input id="passwordID"
                   type="password"
                   name="password"
                   placeholder="Ej: ********"
                   title="Ingresar password del usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa el password del usuario
            </small>
        </div>
        <button type="submit"
                class="btn btn-success">
            Login
        </button>
        <button type="reset"
                class="btn btn-secondary">
            Limpiar
        </button>
    </form>
</div>
