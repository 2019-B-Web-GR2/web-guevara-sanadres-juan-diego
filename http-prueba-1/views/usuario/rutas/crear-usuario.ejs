<%- include('../../compartido/cabecera')%>
<div class="container">
    <%if(datos.error){%>
        <div class="alert alert-danger" role="alert">
            <%=datos.error%>
        </div>
    <%}%>
    <h1>Crear Usuario</h1>
    <form action="http://localhost:4000/usuario"
          method="post">
        <div class="form-group">
            <label for="nombreID">Nombre</label>
            <input id="nombreID"
                   type="text"
                   name="nombre"
                   placeholder="Ej: Juan D. Guevara"
                   title="Ingresar nombre de usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa un nombre mayor a 3 caracteres y menor a 10
            </small>
        </div>
        <div class="form-group">
            <label for="cedulaID">Cédula</label>
            <input id="cedulaID"
                   type="text"
                   name="cedula"
                   placeholder="Ej: 0603781932"
                   title="Ingresar cedula del usuario"
                   class="form-control">
            <small id="nombreIDHelp"
                   class="form-text text-muted">
                Ingresa una cédula válida
            </small>
        </div>
        <button type="submit"
                class="btn btn-success">
            Submit
        </button>
        <button type="reset"
                class="btn btn-secondary">
            Reset
        </button>
    </form>
</div>
<%- include('../../compartido/pie-de-pagina')%>
